                            %a{href: "", onclick: 'window.open("http://twitter.com/share?count=horizontal&original_referer=http://mshu2014.gallery/&text=Ms.Hokkaido Univ.2014&url=http://mshu2014.gallery/&via=mshu2014", "tweetwindow", "width=550, height=450,personalbar=0,toolbar=0,scrollbars=1,resizable=1"); return false;'}
                                .social-icon.fa.fa-twitter.
                                .social-counter
                                    {$ tweets $}
                        %li.social-button.facebook
                            %a{href: "", onclick: 'window.open("http://www.facebook.com/share.php?u=http://mshu2014.gallery/", "facebookwindow", "width=550, height=450,personalbar=0,toolbar=0,scrollbars=1,resizable=1"); return false;'}
