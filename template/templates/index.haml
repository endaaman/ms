    -include 'grunt-generated.haml'

    %body{ng-controller: "MainCtrl"}
        #bg{class: "{$ bgClass $}" }
        #wrap
            #preload-bg
            #main-content{ng-view: None}
            #footer
                .navbar.navbar-default
                    %ul.nav.navbar-nav{ng-controller: "NavCtrl"}
                        -# %li
                        -#     %a.logo-container
                        -#         %img.logo{src: "{{STATIC_URL}}img/logo-black.png"}
                        %li{ng-class: '{ active: isActive("/")}' }
                            %a{href: "/"} ホーム
                        %li.dropdown.dropup
                            %a.dropdown-toggle{data-toggle: "dropdown"}
                                候補者
                                .caret
                            %ul.dropdown-menu
                                -# %li{ng-class: '{ active: isActive("/candidates/{$ c.entry_number $}")}' }
                                -#     %a{href: "/candidates/"} 候補者について
                                -# %li.divider
                                %li{ng-repeat: "c in candidates", ng-class: '{ active: isActive("/candidates/{$ c.entry_number $}")}' }
                                    %a{ng-href: "/candidates/{$ c.entry_number $}"}
                                        {$ c.name $}
                        %li{ng-class: '{ active: isActive("/contest/")}' }
                            %a{href: "/contest/"}
                                コンテストについて

