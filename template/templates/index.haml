%html{ng-app: "endaApp"}    
    %title {%block title%}えんだまーん{%endblock%}
    -# -compress js
    %script{src:"{{STATIC_URL}}js/angular.min.js"}
    %script{src:"{{STATIC_URL}}js/angular-resource.min.js"}
    %script{src:"{{STATIC_URL}}js/angular-route.min.js"}
    %script{src:"{{STATIC_URL}}js/angular-sanitize.min.js"}
    %script{src:"{{STATIC_URL}}js/angular-ui-bootstrap-tpls.min.js"}
    %script{src:"{{STATIC_URL}}js/ngDialog.min.js"}
