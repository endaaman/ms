-# {$ candidates $}


.panel.panel-default
    .panel-heading
        .page-header
            %h1
                エントリーNo.{$ candidate.entry_number $} {$ candidate.name $}
                %span.small
                    {$ candidate.kana $}
    .panel-body
        .row-fluid
            .col-xs-6.col-sm-4.col-sm-3..col-lg-2{ng-repeat: "p in photos"}
                %a.thumbnail.thumb{ng-click: "OpenDialog(p.image)"}
                    %img{ng-src: '{$ p.thumb $}' }

    .panel-footer
        .text-center
            %button.btn.btn-primary.btn-lg{type:"button", ng-click:"OpenMail()"}
                {$ candidate.name $} に投票する
            %p<
                投票は一人一日一回です。詳しくは
                %a{href: '/vote'}
                    こちら
                をごらんください。


        %table.table.candidate-table
            %tr
                %td
                    出身地
                %td
                    {$ candidate.hometown $}
            %tr
                %td
                   　学部
                %td
                    {$ candidate.department $}
            %tr
                %td
                    学年
                %td
                    {$ candidate.grade $}
            %tr
                %td
                    血液型
                %td
                    {$ candidate.blood_type $}
            %tr
                %td
                    応募したキッカケ
                %td
                    {$ candidate.motive $}



%script{type: "text/ng-template", id: "DialogTemplate"}
    .ngdialog-img-container
        %img{ng-src: '{$ image_url $}' }